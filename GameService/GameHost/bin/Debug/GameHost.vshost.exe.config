<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>

  <system.web>
    <compilation debug="true" />
  </system.web>

  <system.serviceModel>
    <services>
      <service name = "GameService.BattleShipService"
               behaviorConfiguration = "mexBehavior">
        <host>
          <baseAddresses>
            <add baseAddress = "http://localhost:8733/" />
            <add baseAddress = "net.tcp://localhost:45617/" />
          </baseAddresses>
        </host>

        <endpoint address = "BattleShipService"
                  binding = "basicHttpBinding"
                  contract = "GameService.IPlayerService">
          <identity>
            <dns value = "localhost" />
          </identity>
        </endpoint>

        <endpoint address = "BattleShipService"
                  binding = "netTcpBinding"
                  contract="GameService.IGameStatisticsService">
          <identity>
            <dns value = "localhost" />
          </identity>
        </endpoint>

        <endpoint address = "mex"
                  binding = "mexHttpBinding"
                  contract = "IMetadataExchange"/>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name = "mexBehavior">
          <serviceMetadata httpGetEnabled = "True" httpsGetEnabled = "True"/>
          <serviceDebug includeExceptionDetailInFaults = "False" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>

</configuration>
